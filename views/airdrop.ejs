<section id="airdrop-header">
  <h1 class="center">airdrop page</h1>
  <div class="container">
    <div class="container">
      <p class="airdrop-success-msg"></p>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-md-4"></div>
      <div class="col-12 col-md-4">
        <div class="container">
          <div id="airdrop-progress">
            <div class="container">
              <h2 class="pb-3 d-flex">
                Airdrop progress
                <span class="progress-badge ms-auto">upcoming</span>
              </h2>
              <div class="progress-tag">
                <p class="d-flex">
                  <span class="me-auto"
                    ><span class="complimentary-color">0</span>
                    participants </span
                  ><span class="ms-auto"
                    ><span class="complimentary-color">15,000</span>
                    participants</span
                  >
                </p>
              </div>
              <div class="progress">
                <div
                  class="progress-bar progress-bar-striped"
                  role="progressbar"
                  style="width: 10%"
                  aria-valuenow="10"
                  aria-valuemin="0"
                  aria-valuemax="100"
                ></div>
              </div>
            </div>
          </div>
        </div>
        
      </div>
      <div class="col-md-4"></div>
    </div>
  </div>
</section>
<section id="how-to-participate">
  <div class="container">
    <h2 class="center">how to participate in the airdrop program</h2>
    <div class="accordion" id="accordionExample">
      <div class="accordion-item">
        <h2 class="accordion-header faq-heading" id="headingOne">
          <button
            class="accordion-button no-box-shadow"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#collapseOne"
            aria-expanded="true"
            aria-controls="collapseOne"
          >
            How to participate?
          </button>
        </h2>
        <div
          id="collapseOne"
          class="accordion-collapse collapse show"
          aria-labelledby="headingOne"
          data-bs-parent="#accordionExample"
        >
          <div class="accordion-body">
            <p id="time" class="center"></p>
            <P
              >Add kiwano to your watchlist on CoinMarketCap:
              https://coinmarketcap.com/currencies/kiwano/</P
            >

            <P>Follow us on Twitter: https://twitter.com/kiwano_</P>

            <P>Join the Telegram channel: https://www.t.me/kiwano</P>

            <P
              >Join the Telegram announcements channel
              https://www.t.me/kiwanoannouncements</P
            >

            <P
              >Like and RT the Tweet kiwano x CoinMarketCap Airdrop pinned on
              the profile tagging 2 friends using the hashtags #kiwanoairdrop
              #cardano:
              https://twitter.com/kiwano_/status/1450763728748699652?s=20</P
            >

            <P>Join the Discord channel: https://discord.gg/EeErRfDNVA</P>
            <P>Follow us on Facebook: https://www.facebook.com/kiwano</P>
            <P>Follow us on Youtube: https://www.youtube.com/c/kiwano</P>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<section id="participate">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <h2 class="center mt-3">participate</h2>
        <div class="container">
          <form action="/airdrop" method="post">
            <div class=" input-group mb-3">
              <label for="email" class="form-label">Email address</label>
              <span class="input-group-text"><i class="far fa-envelope"></i></span>
              <input
                type="email"
                class="form-control input"
                id="email"
                name="email"
                placeholder="JohnDoe@anonymous.com"
                aria-describedby="emailHelp"
              />
            </div>
            <div class=" input-group mb-3">
              <label for="wallet" class="form-label">Wallet: </label>
              <span class="input-group-text"><i class="fas fa-wallet"></i></span>
              <input
                type="text"
                name="wallet"
                id="wallet"
                class="form-control input"
                placeholder="ETH Address"
              />
            </div>
            <div class=" input-group mb-3 ">
              <label for="twitter" class="form-label">Twitter: </label>
              <span class="input-group-text"><i class="fab fa-twitter"></i></span>
              <input
                type="text"
                name="twitter"
                class="form-control input"
                id="twitter"
                placeholder="@JohnDoe"
              />
            </div>
            <div class="input-group mb-3">
              <label for="telegram" class="form-label">Telegram: </label>
              <span class="input-group-text"><i class="fab fa-telegram-plane"></i></span>
              <input
                type="text"
                name="telegram"
                class="form-control input"
                id="telegram"
                placeholder="@JohnDoe"
              />
            </div>
            <div class="mb-3 d-none">
              <label for="referre" class="email-label">Referre: </label>
              <input
                type="text"
                name="referre"
                id="referre"
                class="form-control input"
                value="<%= referre %>"
              />
            </div>
            <button type="submit" class="btn btn-style form-control">
              Submit
            </button>
          </form>
        </div>
      </div>
      <div class="col-md-6">
        <h2 class="center mt-3">participants</h2>
        <div class="container">
          <div class="table-responsive">
            <table class="table table-success table-striped">
              <thead>
                <tr>
                  <th class="p-3" scope="col">ETH Address</th>
                  <th class="p-3" scope="col">Referral</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td class="p-3">0x68f8480d2Ed7a12394C79F4B4a98b97d0C27D243</td>
                  <td class="p-3">kiwano</td>
                </tr>
                <tr>
                  <td class="p-3">0x68f8480d2Ed7a12394C79F4B4a98b97d0C27D243</td>
                  <td class="p-3">kiwano</td>
                </tr>
                <tr>
                  <td class="p-3">0x68f8480d2Ed7a12394C79F4B4a98b97d0C27D243</td>
                  <td class="p-3">kiwano</td>
                </tr>
              </tbody>
            </table>
          </div>
          
        </div>
        <h2 class="center  pt-2 pb-2">details</h2>
        <div class="container">
          <form action="/airdrop" method="get">
            <div class=" input-group mb-3">
              <label for="wallet" class="form-label">Wallet: </label>
              <span class="input-group-text"><i class="fas fa-wallet"></i></span>
              <input
                type="text"
                name="wallet"
                id="wallet"
                class="form-control input"
                placeholder="ETH Address"
              />
            </div>

            <button type="submit" class="btn btn-style form-control">
              Search
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="participant-details">
      <div class="row">
        <div class="col-md-6">
         <P> Referral Link: http://localhost:3000/airdrop/<%= refLink %></P>
        </div>
        <div class="col-md-3">
         <p>refered: <%= refNum.length %> </p>
        </div>
        <div class="col-md-3">
          <p>balance: <%= refNum.length * 10 + balance %> </p>
        </div>
      </div>
    </div>
  </div>
</section>

